{
  "name": "db-tool",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns=e2e",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/e2e",
    "test:all": "npm test && npm run test:e2e",
    "load-test-data": "node test/e2e/load-test-data.js load",
    "clean-test-data": "node test/e2e/load-test-data.js clean"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0"
  },
  "type": "module",
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/index.js",
      "/src/repositories/",
      "/test/e2e/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "globals": {
      "jest": true
    },
    "setupFilesAfterEnv": []
  }
}
